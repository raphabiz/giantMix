{% extends 'base.html.twig' %}

    {% block body %}

        <section class="page-add">
            <div class="container">
                <div class="row">
                    <div class="page-breadcrumb">
                        <h2>Create an account</h2>
                    </div>
                </div>
            </div>
        </section>

        {{ form_start(RegistrationForm) }}
        <div class="contact-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{form_row(RegistrationForm.name,{'label':'Your name :','attr':{'placeholder':'John Snow'}})}}

                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            {{form_row(RegistrationForm.email,{'label':'Your email :','attr':{'placeholder':'john.snow@example.com'}})}}
                        </div>
                        <div class="form-group">
                            {{form_row(RegistrationForm.password,{'label':'Choose password :','attr':{'placeholder':'********'}})}}
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            {{form_row(RegistrationForm.confirm_password,{'label':'Confirm password :','attr':{'placeholder':'********'}})}}
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <button type="submit" class="btn btn-outline-dark">Register in</button>
                         <a placeholder="Deja inscrit?" type="text" href="{{ path('app_login') }}">Already register ?</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(RegistrationForm) }}
    {% endblock %}